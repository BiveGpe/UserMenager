{
    "require": {
        "slim/slim": "4.*",
        "slim/http": "^1.3",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1.0",
        "ext-xdebug": "*",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.3",
        "ext-http": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.15"
    },
    "scripts": {
        "cs-fix": "php8.1 vendor/php-cs-fixer-v3.phar fix --config php_cs.php --verbose",
        "cs-check": "php8.1 vendor/php-cs-fixer-v3.phar fix --config php_cs.php --verbose --diff --dry-run"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App",
            "Domain\\": "src/Domain",
            "Infrastructure\\": "src/Infrastructure",
            "Tests\\": "Tests"
        }
    }
}
